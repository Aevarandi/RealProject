<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="todomanager">
    <class name="Task" table="tasks">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="taskName"/>
        <property name="completionDate" column="complitionDate"/>
        <property name="creationDate" column="createdDate"/>
        <property name="done" column="isDone"/>
    </class>
</hibernate-mapping>